{
  "name": "chenweibo/php-toolbox",
  "description": "php common tools package",
  "license": "MIT",
  "authors": [
    {
      "name": "chenweibo",
      "email": "563960993@qq.com"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": ">=7.1.32",
    "league/flysystem": "^1.0.47"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.0",
    "friendsofphp/php-cs-fixer": "^2.16",
    "mockery/mockery": "^1.2.3",
    "phpstan/phpstan": "^0.12.0"
  },
  "autoload": {
    "psr-4": {
      "Toolbox\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Toolbox\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "phpcs": "vendor/bin/php-cs-fixer fix",
    "test": "vendor/bin/phpunit"
  }
}
